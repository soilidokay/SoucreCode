@page
@model DeTai.ThucTap.Api.Areas.Admin.Pages.GroupCategoryPage.EditModel

@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>
<div class="col-md-8">
    <div class="card">
        <div class="card-header card-header-primary">
            <h4>GroupCategory</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="GroupCategory.Id" />
                    <div class="form-group">
                        <label asp-for="GroupCategory.Name" class="control-label"></label>
                        <input asp-for="GroupCategory.Name" class="form-control" />
                        <span asp-validation-for="GroupCategory.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <div class="d-flex flex-row form-control">
                            <input type="checkbox" asp-for="GroupCategory.IsOwner" class="mr-5" />
                            <label asp-for="GroupCategory.IsOwner" class="control-label"></label>
                        </div>
                        <span asp-validation-for="GroupCategory.IsOwner" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
