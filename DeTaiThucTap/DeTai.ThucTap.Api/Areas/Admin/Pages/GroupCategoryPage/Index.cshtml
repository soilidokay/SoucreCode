@page
@model DeTai.ThucTap.Api.Areas.Admin.Pages.GroupCategoryPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-success" asp-page="Create">Create New</a>
</p>



<div class="card">
    <div class="card-header card-header-primary">
        <h4>VocabularyCategory</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.GroupCategory[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.GroupCategory[0].IsOwner)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.GroupCategory)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsOwner)
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
