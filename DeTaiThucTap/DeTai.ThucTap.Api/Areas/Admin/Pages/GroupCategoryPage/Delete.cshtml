@page
@model DeTai.ThucTap.Api.Areas.Admin.Pages.GroupCategoryPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header card-header-primary">
                <h3>Are you sure you want to delete this?</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    <dl>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.GroupCategory.Name)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.GroupCategory.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.GroupCategory.IsOwner)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.GroupCategory.IsOwner)
                        </dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="GroupCategory.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
