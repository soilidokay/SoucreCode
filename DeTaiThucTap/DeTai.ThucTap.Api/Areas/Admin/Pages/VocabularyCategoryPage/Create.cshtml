@page
@model DeTai.ThucTap.Api.Areas.Admin.VocategoryCategoryPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-center row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4>VocabularyCategory</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="VocabularyCategory.UserId" class="control-label"></label>
                            <select asp-for="VocabularyCategory.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="VocabularyCategory.Name" class="control-label"></label>
                            <input asp-for="VocabularyCategory.Name" class="form-control" />
                            <span asp-validation-for="VocabularyCategory.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="VocabularyCategory.NameVN" class="control-label"></label>
                            <input asp-for="VocabularyCategory.NameVN" class="form-control" />
                            <span asp-validation-for="VocabularyCategory.NameVN" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <div class="d-flex flex-row form-control">
                                <input type="checkbox" asp-for="VocabularyCategory.IsShare" class="mr-5"/>
                                <label asp-for="VocabularyCategory.IsShare" class="control-label"></label>
                            </div>
                            <span asp-validation-for="VocabularyCategory.IsShare" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <div class="d-flex flex-row form-control">
                                <input type="checkbox" asp-for="VocabularyCategory.IsPublish" class="mr-5"/>
                                <label asp-for="VocabularyCategory.IsPublish" class="control-label"></label>
                            </div>
                            <span asp-validation-for="VocabularyCategory.IsPublish" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
<hr />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
