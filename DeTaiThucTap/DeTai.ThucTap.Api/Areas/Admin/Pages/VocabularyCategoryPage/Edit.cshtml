@page
@model DeTai.ThucTap.Api.Areas.Admin.VocategoryCategoryPage.EditModel

@using DeTai.ThucTap.Domain.Common;
@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex justify-content-center row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4>VocabularyCategory</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="VocabularyCategory.Id" />
                        <input type="hidden" asp-for="VocabularyCategory.UserId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="d-flex flex-column align-items-center">
                            <img style="width:300px!important;height:300px!important" id="reviewimage"
                                 src="@(!string.IsNullOrEmpty(Model.VocabularyCategory.ImageUrl)
                                    ? string.Format("/{0}/{1}",Helper.PathImageCategory,Model.VocabularyCategory.ImageUrl):
                                    "/images/Defaults/default_image.jpg")" class="mb-2 mw-100 w-100 rounded" />
                            <label asp-for="VocabularyCategory.Image" class="control-label"></label>
                            <input id="propertyimage" asp-for="VocabularyCategory.ImageUrl" hidden />
                            <input id="imgInp" asp-for="VocabularyCategory.Image" type="file" />
                            <span asp-validation-for="VocabularyCategory.ImageUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="VocabularyCategory.Name" class="control-label"></label>
                            <input asp-for="VocabularyCategory.Name" class="form-control" />
                            <span asp-validation-for="VocabularyCategory.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="VocabularyCategory.NameVN" class="control-label"></label>
                            <input asp-for="VocabularyCategory.NameVN" class="form-control" />
                            <span asp-validation-for="VocabularyCategory.NameVN" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <div class="d-flex flex-row form-control">
                                <input type="checkbox" asp-for="VocabularyCategory.IsShare" class="mr-5" />
                                <label asp-for="VocabularyCategory.IsShare" class="control-label"></label>
                            </div>
                            <span asp-validation-for="VocabularyCategory.IsShare" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <div class="d-flex flex-row form-control">
                                <input type="checkbox" asp-for="VocabularyCategory.IsPublish" class="mr-5" />
                                <label asp-for="VocabularyCategory.IsPublish" class="control-label"></label>
                            </div>
                            <span asp-validation-for="VocabularyCategory.IsPublish" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#reviewimage').attr('src', e.target.result);
                    $('#propertyimage').val(input.files[0].name)
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgInp").change(function () {
            readURL(this);
        });
    </script>
}
