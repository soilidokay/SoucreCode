@page
@model DeTai.ThucTap.Api.Areas.Admin.Pages.VocabularyPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header card-header-primary">
                <h3>Are you sure you want to delete this?</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    <dl >
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Vocabulary.Word)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Vocabulary.Word)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Vocabulary.WordVN)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Vocabulary.WordVN)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Vocabulary.Image)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Vocabulary.Image)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Vocabulary.IsShare)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Vocabulary.IsShare)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Vocabulary.IsPublish)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Vocabulary.IsPublish)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Vocabulary.VocabularyCategory)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Vocabulary.VocabularyCategory.Id)
                        </dd>
                    </dl>
                    <form method="post">
                        <input type="hidden" asp-for="Vocabulary.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <h4>Vocabulary</h4>
    <hr />
    

    
</div>
