@page
@model DeTai.ThucTap.Api.Areas.Admin.Pages.LeaningGoalPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title ">LeraningGoal</h4>
        <p class="card-category"> Here is a subtitle for this table</p>
    </div>
    <div class="card-body">
        <div class="table-responsive">

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.LearningGoal[0].User)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LearningGoal[0].DateCreated)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LearningGoal[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LearningGoal[0].AmountVocabulary)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.LearningGoal)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateCreated)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AmountVocabulary)
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

